modules = ["nodejs-20", "web", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd statuserver && bash -c 'export NODE_ENV=development PORT=5000 && npx vite & sleep 5 && cd server_py && python main.py'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd statuserver/server_py && python main.py"]
build = ["bash", "-c", "cd statuserver && npm install && npm run build"]
